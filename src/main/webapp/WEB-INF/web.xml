<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.presentation.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.presentation.Registration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Application</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.presentation.ApplicationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasswordForgotten</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.presentation.PasswordForgottenServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionAuth</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.presentation.QuestionAuth</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPassword</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.presentation.ResetPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Profile</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.presentation.ProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.presentation.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminPanel</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.presentation.AdminPanelServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateApp</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.presentation.CreateAppServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Application</servlet-name>
        <url-pattern>/app</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasswordForgotten</servlet-name>
        <url-pattern>/newPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionAuth</servlet-name>
        <url-pattern>/questionAuth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPassword</servlet-name>
        <url-pattern>/resetPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminPanel</servlet-name>
        <url-pattern>/adminPanel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateApp</servlet-name>
        <url-pattern>/createApp</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>ConnectedFilter</filter-name>
        <filter-class>ch.heigvd.amt.projet.filters.ConnectedFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>ch.heigvd.amt.projet.filters.AdminFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ConnectedFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/adminPanel</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

</web-app>
